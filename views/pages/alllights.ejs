<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/head %>
</head>
<body class="container">

    <header>
        <% include ../partials/header %>
    </header>

    <main>
        <div class="container">
            <div class="jumbotron">
                <h1>All Lights</h1>
                <br>
                <% lights.forEach((light) => { %>
                    <div class="list-group-item">
                    <a href="/lights/<%= light.id %>" > Light <%= light.id %> </a>
                    <br>
                    Turned On: <%= light.on %>
                    </div>
                <% }) %>
            </div>
        </div>
    </main>

    <footer>
        <% include ../partials/footer %>
    </footer>
    
</body>
</html>